    <fragment
        android:id="@+id/navigation_things"
        android:name="com.example.mysmarthome.ui.things.ThingsFragment"
        android:label="My Smart Home"
        tools:layout="@layout/fragment_things" />

    <fragment
        android:id="@+id/navigation_routines"
        android:name="com.example.mysmarthome.ui.routines.RoutinesFragment"
